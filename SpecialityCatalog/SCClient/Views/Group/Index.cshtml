@model List<Group>
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <a href = "/Group/Add" class=" btn btn-primary">Добавить группу</a>
</div>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Номер</th>
                <th>Тип</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach(var group in Model)
            {
                <tr>
                    <td>@group.Id</td>
                    <td>@group.Name</td>
                    <td>@group.Type</td>
                    <td>
                        <a href = "/Group/Edit/@group.Id" >Редактировать</a>
                        <a href="Group/Remove/@group.Id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
