@model List<Direction>
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <a href = "/Direction/Add" class=" btn btn-primary">Добавить направление подготовки</a>
</div>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach(var direction in Model)
            {
                <tr>
                    <td>@direction.Id</td>
                    <td>@direction.Name</td>
                    <td>
                        <a href = "/Direction/Edit/@direction.Id" >Редактировать</a>
                        <a href="/Direction/Remove/@direction.Id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
